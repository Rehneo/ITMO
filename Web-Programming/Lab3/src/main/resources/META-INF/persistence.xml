            <property name="hibernate.connection.url" value="jdbc:postgresql://pg:5432/studs"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="s368557"/>
            <property name="hibernate.connection.password" value="xxxxxxxxx"/>
        </properties>

    </persistence-unit>
</persistence>
